<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/click"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/child_checkbox"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:focusable="false"
            android:gravity="center" />

        <ImageView
            android:id="@+id/gwc_item_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/b3p" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/gwc_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="【雅欧国际】：所有商品全新原装正品"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/gwc_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="￥10.0"
                        android:textColor="@color/car"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true">


                        <Button
                            android:id="@+id/btn_decreases"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/minus_button"
                            android:text="-"
                            android:textSize="20sp" />


                        //maxLength 设置最大字数

                        <EditText
                            android:id="@+id/ed_amounts"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/amount_ed"
                            android:cursorVisible="false"
                            android:gravity="center"
                            android:maxLength="2"
                            android:text="1" />

                        <Button
                            android:id="@+id/btn_increases"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/plus_button"
                            android:text="+"
                            android:textSize="20sp" />


                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
